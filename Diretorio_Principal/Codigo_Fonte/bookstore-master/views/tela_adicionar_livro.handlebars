<main>
    <div class="container-adicionar-livro">
        <div class="imagem-form-add-livro">
            <img src="/imagens/livro4.jpg" alt="">

        </div>
        <div class="container-form-add-livro">
            <div class="group-form-add-livro">
            <h2>Adicionar Livro</h2>
            <form action="/adicionar-livro" method="post" enctype="multipart/form-data">
                <div class="input-group-add-livros">
                    <label for="titulo">Título</label>
                    <input type="text" id="titulo" name="titulo" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="autor">Autor</label>
                    <input type="text" id="autor" name="autor" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="editora">Editora</label>
                    <input type="text" id="editora" name="editora" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="ano">Ano</label>
                    <input type="text" id="ano" name="ano" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="isbn">ISBN</label>
                    <input type="text" id="isbn" name="isbn" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="descricao">Descrição</label>
                    <textarea id="descricao" name="descricao" rows="4" required></textarea>
                </div>
                <div class="input-group-add-livros">
                    <label for="paginas">Número de Páginas</label>
                    <input type="number" id="paginas" name="paginas" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="estado">Estado do Livro</label>
                    <input type="text" id="estado" name="estado" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="preco">Preço</label>
                    <input type="text" id="preco" name="preco" required />
                </div>
                <div class="input-group-add-livros">
                    <label for="categoria">Categoria</label>
                    <select id="categoria" name="categoria" required>
                        <option value="">Selecione uma categoria</option>
                        <option value="ficcao">Ficção</option>
                        <option value="nao-ficcao">Não Ficção</option>
                        <option value="fantasia">Fantasia</option>
                        <option value="biografia">Biografia</option>
                        <option value="auto-ajuda">Autoajuda</option>
                        <option value="ciencia">Ciência</option>
                        <option value="historia">História</option>
                        <option value="infantil">Infantil</option>
                        <!-- Adicione outras categorias conforme necessário -->
                    </select>
                </div>
                <div class="input-group-add-livros">
                    <label for="imagem">Imagem</label>
                    <input type="file" id="imagem" name="imagem" required />
                </div>
                <button type="submit">Adicionar</button>
            </form>
            </div>
        </div>
    </div>
</main>